page {
  background: #f4f4f4;
}
image {
  width: 100%;
  height: 100%;
}
#header {
  padding: 0 30rpx;
  height: 295rpx;
  background: #ce4032;
  color: #fff;
  overflow: hidden;
}

#header .user-photo {
  width: 135rpx;
  height: 135rpx;
  background: #fff;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  margin: 20rpx auto;
}
#header image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

#header .user-name {
  font-size: 35rpx;
  line-height: 35rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

#header .update-data {
  align-items: center;
  justify-content: space-around;
  margin: 0 auto;
  padding: 0 10rpx;
  width: 120rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  -webkit-appearance: none;
  font-size: 22rpx;
  line-height: 22rpx;
  height: 40rpx;
  color: #f5f5f5;
}

#header .update-data image {
  width: 22rpx;
  height: 22rpx;
}

/* 订单 */
.order {
  margin-bottom: 20rpx;
}
.order .my-order {
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  font-size: 33rpx;
  border-bottom: 1rpx solid #ddd;
}

.order .my-order .pull-right {
  font-size: 26rpx;
}

.order .my-order image {
  width: 35rpx;
  height: 35rpx;
}

.order .order-info  {
  padding: 20rpx 0;
}
.order .order-info .icon {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto 15rpx;
}

.order .order-info .item {
  -webkit-flex: 1;
  flex: 1;
  font-size: 25rpx;
  text-align: center;
  position: relative;
}

.order .order-info .item .tips {
  position: absolute;
  top: 0;
  right: 10rpx;
  background: red;
  padding: 5rpx 8rpx;
  color: #fff;
  font-size: 20rpx;
  line-height: 20rpx;
  border-radius: 5rpx;
}


/* 功能列表 */
.my-list .item {
  height: 93rpx;
  padding: 0 30rpx;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  border-bottom: 1rpx solid #ddd;
}
.my-list .item .icon {
  margin-right: 30rpx;
  height: 40rpx;
  width: 40rpx;
  /* background-size: contain;
  background-repeat: no-repeat;
  background-position: center; */
}
.my-list .item .pull-right image{
  width: 35rpx;
  height: 35rpx;
}
